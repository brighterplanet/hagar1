<VirtualHost *:80>
	ServerName <%= @server_name %>
	DocumentRoot <%= @docroot %>
  RailsEnv <%= @rails_env %>
	# http://cakebaker.42dh.com/2010/01/17/rails-3-and-passenger/
  RackEnv <%= @rack_env %>
	<Directory <%= @docroot %>>
		AllowOverride All
		Options Indexes SymLinksIfOwnerMatch IncludesNoExec
		Order allow,deny
		Allow from all
	</Directory>
</VirtualHost>
