# Generated by Chef for <%= @node[:fqdn] %>.
# Local modifications will be overwritten.

# Set the server root password. This should be preseeded by the package installation.
UPDATE mysql.user SET password = PASSWORD('<%= @node[:mysql][:sabshere_override_password] %>');
FLUSH PRIVILEGES;

<% case @node[:platform] -%>
<% when "debian","ubuntu" -%>
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, RELOAD, SHUTDOWN, PROCESS, FILE, REFERENCES, INDEX, ALTER, SHOW DATABASES, SUPER, CREATE TEMPORARY TABLES, LOCK TABLES, EXECUTE, REPLICATION SLAVE, REPLICATION CLIENT ON *.* TO 'debian-sys-maint'@'localhost' WITH GRANT OPTION;
<% end -%>
# Grant replication for a slave user.
GRANT REPLICATION SLAVE ON *.* TO 'repl'@'%';

FLUSH PRIVILEGES;
